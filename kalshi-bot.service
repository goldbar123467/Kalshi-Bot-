[Unit]
Description=Kalshi BTC Trading Bot
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/Kalshibot
Environment=RUST_LOG=info
EnvironmentFile=/home/ubuntu/Kalshibot/.env
ExecStart=/home/ubuntu/Kalshibot/run.sh
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
